//old horizontal bar setup


{
  "layer": "top",
  "position": "left",
  "width": 32, 
  "margin-left": 0,
  "margin-right": 0,
  "spacing": 0,

  "modules-left": ["hyprland/workspaces"],
  "modules-center": ["hyprland/window"],
  "modules-right": [
    "tray",
    "cpu",
    "memory",
    "bluetooth", // Added
    "network",
    "wireplumber",
    "backlight",
    "battery",
    "custom/mako", // Added
    "clock",
    "custom/power"
  ],

  "hyprland/workspaces": {
    "orientation": "vertical",
    "format": "{name}",
    "on-click": "activate",
    "all-outputs": true,
    "sort-by-number": true,
    "persistent-workspaces": {
      "*": 10 
    }
  },

  "hyprland/window": {
    "rotate": 90,
    "rewrite": {
      "(.*) — Mozilla Firefox": "󰈹",
      "(.*) - Visual Studio Code": "󰨞",
      "(.*) - Discord": "󰙯",
      "kitty": "",
      "konsole": ""
    }
  },

  "bluetooth": {
    "format": "",
    "rotate": 90,
    "on-click": "konsole --title 'bluetui-float' -e bluetui",
    "tooltip-format": "{controller_alias}\t{controller_address}",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}"
  },

  "network": {
    "format-wifi": "",
    "format-ethernet": "󰈀",
    "format-disconnected": "󰖪",
    "rotate": 90,
    "on-click": "konsole --title 'nmtui-float' -e nmtui",
    "tooltip-format": "SSID: {essid}\nSignal: {signalStrength}%\nIP: {ipaddr}"
  },

  "wireplumber": {
    "format": "{icon}",
    "rotate": 90,
    "format-icons": ["", "", ""],
    "on-click": "pavucontrol",
    "tooltip-format": "Volume: {volume}%"
  },

  "backlight": {
    "format": "󰃠",
    "rotate": 90,
    "tooltip-format": "Brightness: {percent}%"
  },

  "cpu": { 
    "format": "", 
    "rotate": 90,
    "tooltip-format": "CPU Usage: {usage}%" 
  },

  "memory": { 
    "format": "", 
    "rotate": 90,
    "tooltip-format": "RAM: {percentage}%" 
  },

  "battery": {
    "format": "{icon}",
    "rotate": 90,
    "format-icons": ["", "", "", "", ""],
    "tooltip-format": "Battery: {capacity}%"
  },

  "custom/mako": {
    "format": "",
    "rotate": 90,
    "on-click": "makoctl mode -t dnd",
    "on-click-right": "makoctl dismiss -a",
    "tooltip": false
  },

  "clock": {
    "format": "{:%H:%M}",
    "rotate": 90,
    "tooltip-format": "<tt>{calendar}</tt>"
  },

  "custom/power": { 
    "format": "", 
    "on-click": "wlogout",
    "tooltip": false 
  }
}